# =====================
# App
# =====================
ENV=dev
LOG_LEVEL=info

# =====================
# MongoDB
# =====================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=adminpass
MONGO_DB=ticketsdb

# Used by the app inside Docker
MONGODB_URI=mongodb://admin:adminpass@mongo:27017/ticketsdb?authSource=admin

# =====================
# Mock External API
# =====================
EXTERNAL_API_BASE_URL=http://mock-external-api:8080
EXTERNAL_API_TIMEOUT_SECONDS=5

# =====================
# Ingestion
# =====================
INGESTION_PAGE_SIZE=100
INGESTION_LOCK_TTL_SECONDS=300
